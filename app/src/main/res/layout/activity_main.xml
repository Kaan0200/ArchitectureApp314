<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainMenu"
    android:background="#ff313131">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Processor Dictionary"
        android:id="@+id/mainPageTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffe8e8e8"
        android:textSize="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Created by Kaan, Elizabeth, Ryan, and Zach"
        android:id="@+id/authorTextView"
        android:layout_below="@+id/mainPageTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff9d5ab8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Processor"
        android:id="@+id/toProcessorSearchButton"
        android:layout_below="@+id/processorListLabel"
        android:layout_centerHorizontal="true"
        android:onClick="openProcessorSearchActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glossary"
        android:id="@+id/toGlosseryButton"
        android:onClick="openGlossaryActivity"
        android:layout_below="@+id/processorSearchLabel"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Processors"
        android:id="@+id/toProcessorList"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/authorTextView"
        android:layout_centerHorizontal="true"
        android:onClick="openProcessorDictionaryActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Take a look at the list of processors"
        android:id="@+id/processorListLabel"
        android:layout_below="@+id/toProcessorList"
        android:layout_centerHorizontal="true"
        android:textColor="#ff3699dc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Find a processor based on properties"
        android:id="@+id/processorSearchLabel"
        android:layout_below="@+id/toProcessorSearchButton"
        android:layout_centerHorizontal="true"
        android:textColor="#ff3699dc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="What does that mean?"
        android:id="@+id/glosseryLabel"
        android:layout_below="@+id/toGlosseryButton"
        android:layout_centerHorizontal="true"
        android:textColor="#ff3699dc" />

</RelativeLayout>
